<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.ManagerDashboard"
      spacing="20" alignment="TOP_CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Manager Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 16px;" />

    <!-- Occupancy Display Section -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Current Gym Occupancy" style="-fx-font-weight: bold;" />
        <VBox fx:id="occupancyLabelContainer" spacing="5" alignment="CENTER_LEFT"/>
    </VBox>

    <Separator/>

    <!-- Buttons Grid -->
    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <Button text="Manage Students" onAction="#handleManageStudents" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Button text="Manage Gyms" onAction="#handleManageGyms" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Button text="Manage Facilities" onAction="#handleManageFacilities" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

        <Button text="Manage Classes" onAction="#handleManageClasses" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Button text="Manage Trainers" onAction="#handleManageTrainers" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button text="Manage Instructors" onAction="#handleManageInstructors" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

        <Button text="Manage Check-Ins / Occupancy"
                onAction="#handleManageActivity"
                GridPane.rowIndex="2" GridPane.columnIndex="0"
                GridPane.columnSpan="3"
                maxWidth="Infinity"/>
    </GridPane>

    <Separator/>

    <Button text="Log Out"
            onAction="#handleLogout"
            maxWidth="150"/>

</VBox>
