<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.StudentManager"
      spacing="15" padding="20">

    <Label text="Manage Students" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="studentNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Student ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="studentIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Student"/>
                    <String fx:value="Employee"/>
                    <String fx:value="Manager"/>
                </FXCollections>
            </items>
        </ComboBox>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Delete" onAction="#handleDelete"/>
    </HBox>

    <TableView fx:id="studentTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="idColumn" text="Student ID"/>
            <TableColumn fx:id="roleColumn" text="Role"/>
        </columns>
    </TableView>

</VBox>
