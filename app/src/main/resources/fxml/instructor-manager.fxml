<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.InstructorManager"
      spacing="15" padding="20">

    <Label text="Manage Instructors" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="instructorNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Certification:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="certificationField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Delete" onAction="#handleDelete"/>
    </HBox>

    <TableView fx:id="instructorTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="certColumn" text="Certification"/>
        </columns>
    </TableView>

</VBox>
