<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.LoginView"
      alignment="CENTER"
      spacing="15"
      padding="40">

    <Label text="Welcome to UVA Gym Tracker">
        <VBox.margin>
            <Insets top="0" bottom="10"/>
        </VBox.margin>
        <style>
            -fx-font-size: 20px;
            -fx-font-weight: bold;
        </style>
    </Label>

    <TextField fx:id="usernameField" promptText="Username or Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <ComboBox fx:id="roleBox" promptText="Select Role">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Student"/>
                <String fx:value="Employee"/>
                <String fx:value="Manager"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Label fx:id="errorLabel" textFill="red"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="loginButton" text="Log In"/>
        <Button fx:id="createButton" text="Create Account"/>
    </HBox>
</VBox>
