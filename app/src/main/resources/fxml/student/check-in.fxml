<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.student.StudentCheckinView"
      alignment="CENTER"
      spacing="25"
      style="-fx-background-color: #f4f6f9;">

    <padding>
        <Insets top="60" right="60" bottom="60" left="60"/>
    </padding>

    <!-- Check-In Message -->
    <Label text="Please see front desk attendant to check in and check out of a gym"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2e3b4e; -fx-wrap-text: true;"
           wrapText="true"
           maxWidth="600"/>

    <!-- Student Email Display -->
    <Label fx:id="emailLabel"
           style="-fx-font-size: 16px; -fx-text-fill: #555;" />

</VBox>
