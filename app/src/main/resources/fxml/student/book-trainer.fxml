<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.student.BookTrainerController"
      spacing="15" alignment="TOP_CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Book a Trainer" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Select Trainer:"/>
        <ComboBox fx:id="trainerComboBox" prefWidth="250"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Select Location:"/>
        <ComboBox fx:id="gymComboBox" prefWidth="250"/>
    </HBox>

    <Label text="Choose a time slot:" style="-fx-font-size: 16px;"/>

    <ScrollPane fitToWidth="true" fitToHeight="true" maxHeight="500">
        <GridPane fx:id="availabilityGrid" hgap="5" vgap="5" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>
        </GridPane>
    </ScrollPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Book Appointment" onAction="#handleBook"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>
</VBox>
