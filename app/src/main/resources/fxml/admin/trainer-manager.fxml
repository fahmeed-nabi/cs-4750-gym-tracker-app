<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.admin.TrainerManager">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="trainerTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="specialtyColumn" text="Specialty" prefWidth="150"/>
                    <TableColumn fx:id="availabilityColumn" text="Availability" prefWidth="200"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="nameField" promptText="Name"/>
                <TextField fx:id="specialtyField" promptText="Specialty"/>
                <TextField fx:id="availabilityField" promptText="Availability"/>
                <Button text="Add" onAction="#handleAdd"/>
                <Button text="Delete" onAction="#handleDelete"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
