<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.admin.ManagerDashboard"
      spacing="20" alignment="TOP_CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Manager Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 16px;" />

    <!-- Occupancy Display Section -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Current Gym Occupancy" style="-fx-font-weight: bold;" />
        <VBox fx:id="occupancyLabelContainer" spacing="5" alignment="CENTER_LEFT"/>
    </VBox>

    <Separator/>

    <!-- Buttons Grid -->
    <VBox spacing="10" alignment="CENTER">
        <Button text="Manage Students" onAction="#handleManageStudents" />
        <Button text="Manage Gyms" onAction="#handleManageGyms" />
        <Button text="Manage Facilities" onAction="#handleManageFacilities" />

        <Button text="Manage Classes" onAction="#handleManageClasses" />
        <Button text="Manage Trainers" onAction="#handleManageTrainers" />
        <Button text="Manage Instructors" onAction="#handleManageInstructors" />

        <Button text="Manage Check-Ins / Occupancy" onAction="#handleManageActivity" />
    </VBox>

    <Separator/>

    <Button text="Log Out"
            onAction="#handleLogout"
            maxWidth="150"/>

</VBox>
