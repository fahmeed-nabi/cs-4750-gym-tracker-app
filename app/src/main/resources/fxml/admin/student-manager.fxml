<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.admin.StudentManager"
            prefWidth="600" prefHeight="400">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Manage Students" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10">
                <TextField fx:id="studentNameField" promptText="Full Name"/>
                <TextField fx:id="studentIdField" promptText="Student ID"/>
                <TextField fx:id="usernameField" promptText="Username"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Search:"/>
                <TextField fx:id="searchField" promptText="Enter name or email"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Add Student" onAction="#handleAdd"/>
                <Button text="Delete Selected" onAction="#handleDelete"/>
            </HBox>

            <TableView fx:id="studentTable" prefHeight="250">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="idColumn" text="Student ID" prefWidth="100"/>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
