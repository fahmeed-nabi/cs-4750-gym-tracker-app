<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.admin.InstructorManager"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Manage Instructors" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Certification:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="certificationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Focus Area:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="focusAreaField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add" onAction="#handleAddInstructor"/>
        <Button text="Update" onAction="#handleUpdateInstructor"/>
        <Button text="Delete" onAction="#handleDeleteInstructor"/>
    </HBox>

    <TableView fx:id="instructorTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="firstNameColumn" text="First Name"/>
            <TableColumn fx:id="lastNameColumn" text="Last Name"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
            <TableColumn fx:id="certColumn" text="Certification"/>
            <TableColumn fx:id="focusColumn" text="Focus Area"/>
        </columns>
    </TableView>

</VBox>
