<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.CreateAccountView"
      alignment="CENTER"
      spacing="15">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Create New Account" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <ComboBox fx:id="roleBox" promptText="Select Role"/>

    <Label fx:id="messageLabel" textFill="red"/>

    <Button text="Create Account" onAction="#handleCreateAccount"/>
</VBox>
