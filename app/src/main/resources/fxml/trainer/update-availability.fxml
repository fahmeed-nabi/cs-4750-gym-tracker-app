<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.trainer.UpdateAvailabilityController"
      spacing="10" alignment="TOP_CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Set Weekly Availability" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ScrollPane fitToWidth="true" fitToHeight="true" maxHeight="600">
        <GridPane fx:id="calendarGrid" hgap="5" vgap="5" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>
        </GridPane>
    </ScrollPane>

    <HBox spacing="10">
        <Button text="Save Availability" onAction="#handleSave" />
        <Button text="Close" onAction="#handleClose" />
    </HBox>
</VBox>
