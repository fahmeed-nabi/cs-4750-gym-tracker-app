<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.trainer.TrainerDashboard"
            prefWidth="700" prefHeight="950">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <!-- Refresh Button aligned to top right -->
            <HBox alignment="TOP_RIGHT">
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh Dashboard" onAction="#handleRefreshDashboard" />
            </HBox>

            <!-- Welcome and info labels centered -->
            <VBox spacing="5" alignment="CENTER">
                <Label text="Trainer Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Label fx:id="welcomeLabel" style="-fx-font-size: 16px;" />
                <Label fx:id="specialtyLabel" />
                <Label fx:id="sessionCountLabel" />
            </VBox>

            <!-- Separator below header -->
            <Separator />
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <Button text="View Upcoming Appointments" onAction="#handleViewAppointments" />
            <Button text="Update Availability" onAction="#handleUpdateAvailability" />
            <Button text="Manage Specialties" onAction="#handleManageSpecialties" />
            <Button text="View Appointment History" onAction="#handleViewHistory" />

            <!-- Separator above chart -->
            <Separator />

            <Label text="Sessions This Week" style="-fx-font-weight: bold;" />
            <LineChart fx:id="appointmentChart" title="Weekly Appointments"
                       prefHeight="300" prefWidth="600">
                <xAxis>
                    <CategoryAxis fx:id="appointmentXAxis" label="Day of Week"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Appointments"/>
                </yAxis>
            </LineChart>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <Separator />
            <HBox alignment="CENTER">
                <padding>
                    <Insets top="10" right="0" bottom="20" left="0"/>
                </padding>
                <Button text="Log Out" onAction="#handleLogout" maxWidth="150"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
